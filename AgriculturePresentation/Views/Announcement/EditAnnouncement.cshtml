@model EntityLayer.Concrete.Announcement

@{
    ViewData["Title"] = "EditAnnouncement";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Güncelleme Sayfası</h4>

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=> x.AnnouncementID)
                <div class="form-group">
                    <label>Başlık</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="başlık giriniz" asp-for="Title">
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    <input type="date" class="form-control" id="exampleInputName1" placeholder="tarih giriniz" asp-for="Date">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea cols="30" rows="5" class="form-control" asp-for="Description" placeholder="açıklama giriniz"></textarea>
                </div>

                <button type="submit" class="btn btn-outline-primary">Kaydet</button>

            </form>
        </div>
    </div>
</div>

