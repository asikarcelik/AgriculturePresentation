@model AgriculturePresentation.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Düzenleme Sayfası</h4>

            <form class="forms-sample" method="post">
                
                <div class="form-group">
                    <label>Mail Adresi</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="mail giriniz" asp-for="Mail">
                </div>
                <div class="form-group">
                    <label>Telefon Numarası</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="telefon giriniz" asp-for="Phone">
                </div>
                <div class="form-group">
                    <label>Şifre</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="şifre giriniz" asp-for="Password">
                </div>
                <div class="form-group">
                    <label>Şifre Tekrar</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="şifreyi tekrar giriniz" asp-for="ConfirmPassword">
                </div>
                <br />
                <button type="submit" class="btn btn-outline-primary">Kaydet</button>

            </form>
        </div>
    </div>
</div>



